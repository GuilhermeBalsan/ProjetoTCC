@model IEnumerable<Projeto.TCC.Painel.Models.Perfil>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Novo Perfil", "Create", null, new { @class = "btn btn-default" })
</p>

<div class="panel panel-default">
    <div class="panel-heading">Gerenciar Perfils</div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <th>
                    Ações
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Deletar", "Delete", new { id = item.Id }) |
                        <a href="@Url.Action("Index", "Relatorios", new { PerfilId = item.Id })">Gerenciar Relatórios</a>
                    </td>
                </tr>
            }
        </tbody>

</table>
</div>
