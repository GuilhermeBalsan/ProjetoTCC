@model IEnumerable<Projeto.TCC.Painel.Models.Resposta>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Nova Resposta", "Create", new { perguntaId = ViewBag.PerguntaId }, new { @class = "btn btn-default" })
</p>

<div class="panel panel-default">
    <div class="panel-heading">Gerenciar Respostas: @ViewBag.Pergunta</div>
    <table class="table table-hover table-bordered table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Perfil.Titulo)
                </th>
                <th>
                    Perfil
                </th>
                <th>
                    Ações
                </th>
                
            </tr>

        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Perfil.Titulo)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </tbody>
</table>
</div>
<p>
    <a href="@Url.Action("Index", "Perguntas", new { questionarioId = ViewBag.QuestionarioId })" class="btn btn-default">Voltar para Perguntas</a>
</p>
