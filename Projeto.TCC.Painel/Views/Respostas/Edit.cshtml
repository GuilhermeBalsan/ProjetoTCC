            @Html.LabelFor(model => model.Titulo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Titulo)
                @Html.ValidationMessageFor(model => model.Titulo)
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.PerguntaId, "PerguntaId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PerguntaId", String.Empty)
                @Html.ValidationMessageFor(model => model.PerguntaId)
            </div>
        </div>*@        

        <div class="form-group">
            @Html.LabelFor(model => model.PerfilId, "Perfil", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PerfilId", String.Empty)
                @Html.ValidationMessageFor(model => model.PerfilId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar para Respostas", "Index", new { perguntaId = Model.PerguntaId }, new { @class = "btn btn-default" })
</div>

