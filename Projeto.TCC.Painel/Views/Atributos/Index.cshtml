@model IEnumerable<Projeto.TCC.Painel.Models.Atributo>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Novo Atributo", "Create")
</p>

<div class="panel panel-default">
    <div class="panel-heading">Gerenciar Atributos</div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                Ações
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.Id }) |
                    <a href="@Url.Action("Index", "Relatorios", new { atributoId = item.Id })">Gerenciar Relatórios</a>
                </td>
            </tr>
        }

    </table>
</div>
