@model Projeto.TCC.Painel.Models.Resultado

@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<h2>Detalhes</h2>

<div>
    <h4>Resultado</h4>
	<hr />
    <dl class="dl-horizontal">
        <dt>
            Candidato
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Candidato.Nome)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Candidato.Email)
        </dd>
        
        <dt>
            Curriculum
        </dt>

        <dd>
            <a href="@Model.Candidato.Curriculum">@Model.Candidato.Curriculum</a>
        </dd>
        <br />
        <dt>
            Questionário
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Candidato.Questionario.Nome)
        </dd>

        <br />

        @{

    foreach (var resultado in Model.DetalhesResultado)
    {

        <div class="row">
            <div class="col-md-6">
                <dt>
                    Perfil
                </dt>

                <dd>
                    @resultado.Perfil.Titulo
                </dd>
            </div>
            <div class="col-md-6">
                <dt>
                    Quantidade
                </dt>

                <dd>
                    @resultado.Quantidade
                </dd>
            </div>
        </div>
    }
}

    </dl>
</div>
<p>
    @Html.ActionLink("Voltar para Candidatos", "Candidatos", new { id = ViewBag.QuestionarioId }, new { @class = "btn btn-default" })    
</p>
</p>
